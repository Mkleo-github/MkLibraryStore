<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/shape_mic_bg">

        <LinearLayout
            android:id="@+id/ly_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/iv_icon_mic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_mic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_val_7"
                    android:layout_width="25dp"
                    android:layout_height="4dp"
                    android:background="@mipmap/icon_mic_value_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_val_6"
                    android:layout_width="22dp"
                    android:layout_height="4dp"
                    android:background="@mipmap/icon_mic_value_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_val_5"
                    android:layout_width="19dp"
                    android:layout_height="4dp"
                    android:background="@mipmap/icon_mic_value_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_val_4"
                    android:layout_width="16dp"
                    android:layout_height="4dp"
                    android:background="@mipmap/icon_mic_value_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_val_3"
                    android:layout_width="13dp"
                    android:layout_height="4dp"
                    android:background="@mipmap/icon_mic_value_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_val_2"
                    android:layout_width="10dp"
                    android:layout_height="4dp"
                    android:background="@mipmap/icon_mic_value_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_val_1"
                    android:layout_width="7dp"
                    android:layout_height="4dp"
                    android:background="@mipmap/icon_mic_value_item" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_mic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="取消发送"
            android:textColor="@color/colorRed"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>